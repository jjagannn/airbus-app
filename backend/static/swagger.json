{
    "openapi": "3.0.0",
    "info": {
      "description": "jagan",
      "version": "1.0.0",
      "title": "Jagans-Python3-Flask-RESTAPI",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "servers": [
        {
          "url": "/"
        }
      ],
      "tags": [
        {
          "name": "Products CRUD",
          "description": "Example API for requesting and modifying Airbus products"
        }
      ],
      "paths": {
        "/api/addProduct": {
          "post": {
            "tags": [
              "Add Product"
            ],
            "summary": "Add an aircraft product",
            "requestBody": {
              "description": "Add Product Post Object",
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/addProductPostBody"
                  }
                }
              }
            },
            "produces": [
              "application/json"
            ],
            "responses": {
              "201": {
                "description": "OK",
                "schema": {
                  "$ref": "#/components/schemas/id"
                }
              },
              "400": {
                "description": "Failed. Bad post data."
              }
            }
          }
        }
    },
    "components": {
      "schemas": {
        "id": {
          "properties": {
            "uuid": {
              "type": "string"
            }
          }
        },
        "addProductPostBody": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "format": "string"
            },
            "productName": {
              "type": "string",
              "format": "string"
            },
            "productCat": {
                "type": "string",
                "format": "string"
              },
              "productDescr": {
                "type": "string",
                "format": "string"
              },
              "units": {
                "type": "string",
                "format": "number"
              }
          }
        }
      }
    }
}